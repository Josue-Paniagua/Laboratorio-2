//declaracion de variables

using System.Diagnostics.CodeAnalysis;

int num1, num2, suma, resta, mult, div;

//pedir al usuario que ingrese los numeros

Console.WriteLine("Ingrese el primer numero: ");
num1 = Convert.ToInt32(Console.ReadLine());

Console.WriteLine("Ingrese el segundo numero : ");
num2 = Convert.ToInt32(Console.ReadLine());

//opreaciones a realizar 

suma = num1 + num2;
resta = num1 - num2;
mult = num1 * num2;
div = num1 / num2;

//mostrar los resultados

Console.WriteLine("La suma de los dos numeros ingresados es de : " + suma);
Console.WriteLine(" Por otro lado la resta de los numeros ingresados es de : " + resta); 
Console.WriteLine("Y tambien la multiplicacion de los numeros ingresados es de : " + mult);
Console.WriteLine("Finalmente la division de los numeros ingresados es de : " + div);





