//declaracion de variables

using System.Diagnostics.CodeAnalysis;

int num1, num2, suma, resta, mult, div;

//pedir al usuario que ingrese los numeros

Console.WriteLine("Ingrese el primer numero: ");
num1 = Convert.ToInt32(Console.ReadLine());

Console.WriteLine("Ingrese el segundo numero : ");
num2 = Convert.ToInt32(Console.ReadLine());

//opreaciones a realizar 

suma = num1 + num2;
resta = num1 - num2;
mult = num1 * num2;
div = num1 / num2;

//mostrar los resultados

Console.WriteLine("La suma de los dos numeros ingresados es de : " + suma);
Console.WriteLine(" Por otro lado la resta de los numeros ingresados es de : " + resta); 
Console.WriteLine("Y tambien la multiplicacion de los numeros ingresados es de : " + mult);
Console.WriteLine("Finalmente la division de los numeros ingresados es de : " + div);


//PROGRAMA EN DECIMALES 
//declaracion de variables


decimal num1, num2, suma, resta, mult, div;

//pedir al usuario que ingrese los numeros

Console.WriteLine("Ingrese el primer numero: ");
num1 = Convert.ToDecimal(Console.ReadLine());

Console.WriteLine("Ingrese el segundo numero : ");
num2 = Convert.ToDecimal(Console.ReadLine());

//opreaciones a realizar 

suma = num1 + num2;
resta = num1 - num2;
mult = num1 * num2;
div = num1 / num2;

//mostrar los resultados

Console.WriteLine("La suma de los dos numeros ingresados es de : " + suma);
Console.WriteLine(" Por otro lado la resta de los numeros ingresados es de : " + resta); 
Console.WriteLine("Y tambien la multiplicacion de los numeros ingresados es de : " + mult);
Console.WriteLine("Finalmente la division de los numeros ingresados es de : " + div);





// PROGRAMA CON TIPO DE DATO FLOAT  y int 16 
//declaracion de variables


float num1, num2, suma, resta, mult, div;

//pedir al usuario que ingrese los numeros

Console.WriteLine("Ingrese el primer numero: ");
num1 = Convert.ToInt16(Console.ReadLine());

Console.WriteLine("Ingrese el segundo numero : ");
num2 = Convert.ToInt16(Console.ReadLine());

//opreaciones a realizar 

suma = num1 + num2;
resta = num1 - num2;
mult = num1 * num2;
div = num1 / num2;

//mostrar los resultados

Console.WriteLine("La suma de los dos numeros ingresados es de : " + suma);
Console.WriteLine(" Por otro lado la resta de los numeros ingresados es de : " + resta); 
Console.WriteLine("Y tambien la multiplicacion de los numeros ingresados es de : " + mult);
Console.WriteLine("Finalmente la division de los numeros ingresados es de : " + div);

//codigo de tipo de dato Byte 
//declaracion de variables


Byte num1, num2, suma, mult;
sbyte resta;
float div;


//pedir al usuario que ingrese los numeros

Console.WriteLine("Ingrese el primer numero: ");
num1 = Convert.ToByte(Console.ReadLine());

Console.WriteLine("Ingrese el segundo numero : ");
num2 = Convert.ToByte(Console.ReadLine());

//opreaciones a realizar 

suma = (byte)(num1 + num2);
resta = (sbyte)(num1 - num2);
mult = (byte)(num1 * num2);
div = (float)(num1 / num2);

//mostrar los resultados

Console.WriteLine("La suma de los dos numeros ingresados es de : " + suma);
Console.WriteLine(" Por otro lado la resta de los numeros ingresados es de : " + resta); 
Console.WriteLine("Y tambien la multiplicacion de los numeros ingresados es de : " + mult);
Console.WriteLine("Finalmente la division de los numeros ingresados es de : " + div);












